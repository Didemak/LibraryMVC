@model List<LibraryMVC.Models.Uye>
@{
    ViewBag.Title = "UyeListele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Üyeler</h2>

<table class="table table-striped">

    <thead>
        <tr>
            <th>Sicil Numarası</th>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Telefon Numarası</th>
            <th>E-posta</th>
            <th>Cinsiyet</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SicilNo</td>
                <td>@item.UyeAdi</td>
                <td>@item.UyeSoyadi</td>
                <td>@item.TelefonNo</td>
                <td>@item.Email</td>
                <td>@item.Cinsiyet</td>
                <td>@Html.ActionLink("SİL", "UyeSil", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                <td>@Html.ActionLink("GÜNCELLE", "UyeGuncelle", new { id = item.Id }, new { @class = "btn btn-success" })</td>
            </tr>
        }

    </tbody>
</table>


